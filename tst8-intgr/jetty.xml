<?xml version="1.0"?>
<!DOCTYPE Configure PUBLIC 
  "-//Mort Bay Consulting//DTD Configure//EN" 
  "http://jetty.mortbay.org/configure.dtd">
  
<!--
 ! "A jetty-env.xml file is an optional file that you can place in your 
 ! webapp's WEB-INF directory to configure JNDI resources specifically 
 ! for that webapp."
 !
 ! It turns out that for development purposes, you can also set a 
 ! jetty-env via the maven/jetty plugin, without modifying the WAR file.
 !
 ! http://docs.codehaus.org/display/JETTY/jetty-env.xml
 ! http://docs.huihoo.com/javadoc/jetty/6.1/org/mortbay/naming/factories/MailSessionReference.html
 !-->

<Configure id="Server" class="org.mortbay.jetty.Server">
  <New id="mail" class="org.mortbay.jetty.plus.naming.Resource">
    <Arg>
      <Ref id="Server" />
    </Arg>
    <Arg>mail/Session</Arg>
    <Arg>
      <New class="org.mortbay.naming.factories.MailSessionReference">
        <!-- Set name="user">fred</Set -->
        <!-- Set name="password">OBF:1xmk1w261z0f1w1c1xmq</Set -->
        <Set name="properties">
          <New class="java.util.Properties">
            <Put name="mail.smtp.host">localhost.localdomain</Put>
            <Put name="mail.from">noreply@localhost.localdomain</Put>
            <Put name="mail.debug">true</Put>
          </New>
        </Set>
      </New>
    </Arg>
  </New>
</Configure>

 
